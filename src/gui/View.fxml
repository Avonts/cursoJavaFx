<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="25.0" layoutY="25.0" text="Calculate Sum">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="25.0" layoutY="48.0" promptText="First number" />
      <TextField fx:id="txtNumber2" layoutX="25.0" layoutY="79.0" promptText="Second number" />
      <Button fx:id="btSum" layoutX="25.0" layoutY="114.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="25.0" layoutY="150.0" text="Result =">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="75.0" layoutY="150.0" prefHeight="15.0" prefWidth="40.0">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
